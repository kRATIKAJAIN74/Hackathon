# Database Configuration
MONGODB_URI=mongodb://localhost:27017/foodoscope
# Or for PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/foodoscope

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Foodoscope API Configuration
FOODOSCOPE_API_URL=https://www.foodoscope.com/api
FOODOSCOPE_API_KEY=your_foodoscope_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Cache Configuration (in seconds)
CACHE_DURATION=3600
